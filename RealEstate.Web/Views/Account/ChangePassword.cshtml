@model RealEstate.Application.DTOs.ChangePasswordDTO
@{
    ViewData["Title"] = "Change Password";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <!-- CARD HEADER -->
                <div class="card-header">
                    <h4 class="text-center">Change Password</h4>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">

                    <!-- ALERT MESSAGES -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                            <strong>Success!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                            <strong>Error!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- FORM -->
                    <form asp-action="ChangePassword" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Current Password -->
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"><strong>Current Password</strong></label>
                            <div class="input-group" id="show_hide_current_password">
                                <input asp-for="CurrentPassword" type="password" class="form-control border-end-0" placeholder="Enter current password" />
                                <a href="javascript:;" class="input-group-text bg-transparent">
                                    <i class="bx bx-hide"></i>
                                </a>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"><strong>New Password</strong></label>
                            <div class="input-group" id="show_hide_new_password">
                                <input asp-for="NewPassword" type="password" class="form-control border-end-0" placeholder="Enter new password" />
                                <a href="javascript:;" class="input-group-text bg-transparent">
                                    <i class="bx bx-hide"></i>
                                </a>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"><strong>Confirm Password</strong></label>
                            <div class="input-group" id="show_hide_confirm_password">
                                <input asp-for="ConfirmPassword" type="password" class="form-control border-end-0" placeholder="Confirm password" />
                                <a href="javascript:;" class="input-group-text bg-transparent">
                                    <i class="bx bx-hide"></i>
                                </a>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-light">
                                <i class='bx bx-arrow-back me-1'></i>Back to Dashboard
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            togglePassword("#show_hide_current_password");
            togglePassword("#show_hide_new_password");
            togglePassword("#show_hide_confirm_password");

        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}