@model RealEstate.Application.DTOs.ForgotPasswordDTO

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <title>Real Estate - Forgot Password</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="@Url.Content("~/vendor/jquery-nice-select/css/nice-select.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" />
</head>

<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">

                                    <div class="text-center mb-3">
                                        <h1>Real Estate</h1>
                                    </div>

                                    <!-- TEMP DATA MESSAGE DISPLAY -->
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                            <strong>Success!</strong> @TempData["SuccessMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                            <strong>Error!</strong> @TempData["ErrorMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }
                                    <!-- END TEMP DATA -->


                                    <h4 class="text-center mb-4">Forgot your password?</h4>
                                    <p class="text-center mb-4">
                                        Enter your email address and we’ll send you a reset link.
                                    </p>

                                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                        <div class="mb-3">
                                            <label asp-for="Email" class="mb-1"><strong>Email</strong></label>
                                            <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">
                                                Send Reset Link
                                            </button>
                                        </div>

                                        <div class="text-center mt-3">
                                            <a asp-action="Login" asp-controller="Account">Back to Login</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/vendor/global/global.min.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/custom.min.js")"></script>
    <script src="@Url.Content("~/vendor/jquery-nice-select/js/jquery.nice-select.min.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/deznav-init.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/demo.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/styleSwitcher.js")"></script>

    <partial name="_ValidationScriptsPartial" />
</body>

</html>
