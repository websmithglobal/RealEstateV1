@model RealEstate.Application.DTOs.LoginDTO
@{
    ViewBag.Title = "User Login";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Real Estate - Login</title>

    <!-- favicon -->
    <link rel="icon" href="@Url.Content("~/images/favicon-32x32.png")" type="image/png" />

    <!-- Rocker Template CSS -->
    <link href="@Url.Content("~/plugins/simplebar/css/simplebar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/perfect-scrollbar/css/perfect-scrollbar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/metismenu/css/metisMenu.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/bootstrap-extended.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet" />
    <link href="@Url.Content("~/css/app.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/icons.css")" rel="stylesheet" />

</head>

<body>

    <div class="wrapper">
        <div class="section-authentication-cover">

            <div class="row g-0">

                <!-- Left image section -->
                <div class="col-12 col-xl-7 col-xxl-8 auth-cover-left d-none d-xl-flex align-items-center justify-content-center">
                    <div class="card shadow-none bg-transparent rounded-0 mb-0">
                        <div class="card-body">
                            <img src="@Url.Content("~/images/login-images/login-cover.svg")" class="img-fluid" width="650" alt="">
                        </div>
                    </div>
                </div>

                <!-- Right login section -->
                <div class="col-12 col-xl-5 col-xxl-4 auth-cover-right align-items-center justify-content-center">
                    <div class="card rounded-0 m-3 shadow-none bg-transparent">
                        <div class="card-body p-sm-5">

                            <div class="text-center mb-3">
                                <img src="@Url.Content("~/images/logo-icon.png")" width="60" alt="">
                            </div>

                            <div class="text-center mb-4">
                                <h5 class="">Real Estate</h5>
                                <p class="mb-0">Please log in to your account</p>
                            </div>

                            <!-- TEMP DATA MESSAGES -->
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success text-center">
                                    <strong>Success!</strong> @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger text-center">
                                    <strong>Error!</strong> @TempData["ErrorMessage"]
                                </div>
                            }
                            <!-- END TEMP DATA -->

                            <div class="form-body">
                                <form asp-action="Login" asp-controller="Account" method="post" class="row g-3">

                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                    <!-- Email -->
                                    <div class="col-12">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Password with show/hide -->
                                    <div class="col-12">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <div class="input-group" id="show_hide_password">
                                            <input asp-for="Password" type="password" class="form-control border-end-0" placeholder="Enter Password">
                                            <a href="javascript:;" class="input-group-text bg-transparent"><i class="bx bx-hide"></i></a>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Remember me + forgot -->
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" asp-for="RememberMe"></label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 text-end">
                                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>

                                    <!-- Submit -->
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">Sign in</button>
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/js/ThemeJS/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/jquery.min.js")"></script>
    <script src="@Url.Content("~/plugins/simplebar/js/simplebar.min.js")"></script>
    <script src="@Url.Content("~/plugins/metismenu/js/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/plugins/perfect-scrollbar/js/perfect-scrollbar.js")"></script>
    <script src="@Url.Content("~/js/ProjectJS/CommonJS/CommonUtilities.js")"></script>

    <!-- Password Toggle -->
    <script>
        $(document).ready(function () {
            togglePassword("#show_hide_password");
        });
    </script>

    <script src="@Url.Content("~/js/ThemeJS/app.js")"></script>

    <partial name="_ValidationScriptsPartial" />

</body>
</html>
