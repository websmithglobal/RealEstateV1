@model RealEstate.Application.DTOs.ResetPasswordDTO

@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="@Url.Content("~/images/favicon-32x32.png")" type="image/png" />
    <!--plugins-->
    <link href="@Url.Content("~/plugins/simplebar/css/simplebar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/perfect-scrollbar/css/perfect-scrollbar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/metismenu/css/metisMenu.min.css")" rel="stylesheet" />
    <!-- loader-->
   @*  <link href="@Url.Content("~/css/pace.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/js/ThemeJS/pace.min.js")"></script>  *@
    <!-- Bootstrap CSS -->
    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/bootstrap-extended.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="@Url.Content("~/css/app.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/icons.css")" rel="stylesheet" />
    <title>@ViewBag.Title - Real Estate</title>
</head>

<body class="">
    <div class="wrapper">
        <div class="section-authentication-cover">
            <div>
                <div class="row g-0">

                    <!-- LEFT IMAGE -->
                    <div class="col-12 col-xl-7 col-xxl-8 auth-cover-left align-items-center justify-content-center d-none d-xl-flex">
                        <div class="card shadow-none bg-transparent rounded-0 mb-0">
                            <div class="card-body">
                                <img src="@Url.Content("~/images/login-images/reset-password-cover.svg")"
                                     class="img-fluid" width="600" alt="Reset Password" />
                            </div>
                        </div>
                    </div>

                    <!-- RIGHT FORM -->
                    <div class="col-12 col-xl-5 col-xxl-4 auth-cover-right align-items-center justify-content-center">
                        <div class="card rounded-0 m-3 shadow-none bg-transparent mb-0">
                            <div class="card-body p-sm-5">

                                <div class="text-center mb-4">
                                    <img src="@Url.Content("~/images/logo-icon.png")" width="60" alt="Logo" />
                                </div>

                                <div class="text-start mb-4">
                                    <h5>Generate New Password</h5>
                                    <p class="mb-0">
                                        We received your reset password request. Please enter your new password!
                                    </p>
                                </div>

                                <!-- TEMP DATA -->
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                        <strong>Success!</strong> @TempData["SuccessMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                        <strong>Error!</strong> @TempData["ErrorMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }
                                <!-- END TEMP DATA -->

                                <form asp-action="ResetPassword" asp-controller="Account" method="post">

                                    <!-- Hidden -->
                                    <input type="hidden" asp-for="UserId" />
                                    <input type="hidden" asp-for="Token" />

                                    <!-- New Password -->
                                    <div class="mb-3 mt-4">
                                        <label asp-for="NewPassword" class="form-label">New Password</label>
                                        <div class="input-group" id="show_hide_new_password">
                                            <input asp-for="NewPassword" type="password" class="form-control border-end-0" placeholder="Enter new password" />
                                            <a href="javascript:;" class="input-group-text bg-transparent">
                                                <i class="bx bx-hide"></i>
                                            </a>
                                        </div>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>

                                    <!-- Confirm Password -->
                                    <div class="mb-4">
                                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                        <div class="input-group" id="show_hide_confirm_password">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control border-end-0" placeholder="Confirm password" />
                                            <a href="javascript:;" class="input-group-text bg-transparent">
                                                <i class="bx bx-hide"></i>
                                            </a>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Change Password</button>

                                        <a asp-controller="Account" asp-action="Login" class="btn btn-light">
                                            <i class='bx bx-arrow-back me-1'></i>Back to Login
                                        </a>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>

                </div>
                <!-- end row -->
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="@Url.Content("~/js/ThemeJS/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/ThemeJS/jquery.min.js")"></script>
    <script src="@Url.Content("~/plugins/simplebar/js/simplebar.min.js")"></script>
    <script src="@Url.Content("~/plugins/metismenu/js/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/plugins/perfect-scrollbar/js/perfect-scrollbar.js")"></script>
    <script src="@Url.Content("~/js/ProjectJS/CommonJS/CommonUtilities.js")"></script>
    <script>
		$(document).ready(function () {
            togglePassword("#show_hide_new_password");
            togglePassword("#show_hide_confirm_password");
		});
	</script>

    <partial name="_ValidationScriptsPartial" />
    <script src="@Url.Content("~/js/ThemeJS/app.js")"></script>
</body>

</html>
