@using System.Security.Claims
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var roles = User.Claims
                .Where(c => c.Type == ClaimTypes.Role)
                .Select(c => c.Value)
                .ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Real Estate</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="@Url.Content("~/images/favicon-32x32.png")" type="image/png" />
    <!-- plugins -->
    <link href="@Url.Content("~/plugins/simplebar/css/simplebar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/perfect-scrollbar/css/perfect-scrollbar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/metismenu/css/metisMenu.min.css")" rel="stylesheet" />
    @* <script src="@Url.Content("~/plugins/datatable/css/dataTables.bootstrap5.min.css")"></script> *@
   
    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/bootstrap-extended.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/select2-bootstrap-5-theme.min.css")" rel="stylesheet" />
    <!-- Select2 CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&amp;display=swap" rel="stylesheet">
    <link href="@Url.Content("~/css/app.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/icons.css")" rel="stylesheet" />
    <!-- Theme Style CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/dark-theme.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/semi-dark.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/header-colors.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <title>@ViewBag.Title - Real Estate</title>
</head>
<body>
    <!--wrapper-->
    <div class="wrapper app-container">
        <!--sidebar wrapper -->
        <div class="sidebar-wrapper" data-simplebar="true">
            <div class="sidebar-header">
                <div>
                    <img src="@Url.Content("~/images/logo-icon.png")" class="logo-icon" alt="logo icon" />
                </div>
                <div>
                    <h4 class="logo-text">Real Estate</h4>
                </div>
                <div class="toggle-icon ms-auto">
                    <i class='bx bx-arrow-back'></i>
                </div>
            </div>
            <!--navigation-->
            <ul class="metismenu" id="menu">
                <li>
                    <a href="@Url.Action("Index","Home")">
                        <div class="parent-icon">
                            <i class='bx bx-home-alt'></i>
                        </div>
                        <div class="menu-title">Dashboard</div>
                    </a>
                </li>
                <li class="menu-label">Masters</li>
                <li>
                    <a asp-controller="Account"
                       asp-action="Register"
                       class="d-flex align-items-center word-wrap-menu @(currentController == "Account" && currentAction == "Register" ? "active-sub" : "")">
                        <i class="fadeIn animated bx bx-user me-2"></i>
                        <span>User Master</span>
                    </a>

                </li>
                <li>
                    <a href="javascript:;" class="has-arrow">
                        <div class="parent-icon">
                            <i class='bx bx-cart'></i>
                        </div>
                        <div class="menu-title">Master</div>
                    </a>
                    <ul>
                        <li>
                            <a href="@Url.Action("Index","PropertyTypeMaster")">
                                <i class='bx bx-home-alt'></i> Property Type
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","BuildingTypeMaster")">
                                <i class='bx bx-building'></i> Building Type
                            </a>
                        </li>
                    </ul>

                </li>
            </ul>
            <!--end navigation-->
        </div>
        <!--end sidebar wrapper -->
        <!--start header -->
        <header>
            <div class="topbar d-flex align-items-center">
                <nav class="navbar navbar-expand gap-3">
                    <div class="mobile-toggle-menu">
                        <i class='bx bx-menu'></i>
                    </div>
                    <div class="top-menu ms-auto">
                        <ul class="navbar-nav align-items-center gap-1">

                            <li class="nav-item dark-mode d-none d-sm-flex">
                                <a class="nav-link dark-mode-icon" href="javascript:;">
                                    <i class='bx bx-moon'></i>
                                </a>
                            </li>

                        </ul>
                    </div>
                    <div class="user-box dropdown px-3">
                        <a class="d-flex align-items-center nav-link dropdown-toggle gap-3 dropdown-toggle-nocaret"
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@Url.Content("~/images/avatars/avatar.png")"
                                 class="user-img" alt="user avatar" />
                            <div class="user-info">
                                <p class="user-name mb-0">@User.Identity.Name</p>
                                <p class="designation mb-0">@roles.FirstOrDefault()</p>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index","Home")">
                                    <i class="bx bx-user fs-5"></i><span>Profile</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Account" asp-action="ChangePassword"
                                   class="dropdown-item d-flex align-items-center">
                                    <i class='bx bx-lock-alt fs-5 text-dark'></i>
                                    <span>Change Password</span>
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index","Home")">
                                    <i class="bx bx-home-circle fs-5"></i><span>Dashboard</span>
                                </a>
                            </li>
                            <li><div class="dropdown-divider mb-0"></div></li>
                            <li>
                                <form asp-controller="Account" asp-action="LogOff" method="post" class="d-inline w-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item d-flex align-items-center border-0 bg-transparent w-100">
                                        <i class='bx bx-log-out-circle'></i>
                                        <span class="ms-2">Logout</span>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <!--end header -->
        <div class="page-wrapper">
            <div class="page-content">
                @RenderBody();
            </div>
        </div>
        <!--start overlay-->
        <div class="overlay toggle-icon"></div>
        <!--end overlay-->
        <!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
        <!--End Back To Top Button-->
        <footer class="page-footer">
            <p class="mb-0">Copyright © 2023. All right reserved.</p>
        </footer>
    </div>
    <!--end wrapper-->
    <!-- search modal -->
